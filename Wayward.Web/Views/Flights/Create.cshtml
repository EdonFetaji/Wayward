@model Wayward.Domain.DomainModels.Flight
@using Wayward.Domain.DomainModels
@{
    ViewData["Title"] = "Create Flight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="h3 mb-3">Create Flight</h1>
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="AirlineName" class="form-control" />
                        <label asp-for="AirlineName"></label>
                    </div>
                    <span asp-validation-for="AirlineName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FlightDeparture" class="form-control" />
                        <label asp-for="FlightDeparture"></label>
                    </div>
                    <span asp-validation-for="FlightDeparture" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FlightDestination" class="form-control" />
                        <label asp-for="FlightDestination"></label>
                    </div>
                    <span asp-validation-for="FlightDestination" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DateDeparture" class="form-label"></label>
                    <input asp-for="DateDeparture" class="form-control" type="date" />
                    <span asp-validation-for="DateDeparture" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Duration</label>
                    <div class="input-group">
                        <input asp-for="HourDuration" class="form-control" type="number" min="0" max="70" />
                        <span class="input-group-text">h</span>
                        <input asp-for="MinuteDuration" class="form-control" type="number" min="0" max="59" />
                        <span class="input-group-text">m</span>
                    </div>
                    <div class="d-flex gap-3">
                        <span asp-validation-for="HourDuration" class="text-danger"></span>
                        <span asp-validation-for="MinuteDuration" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="MaxSeats" class="form-control" type="number" min="1" />
                        <label asp-for="MaxSeats"></label>
                    </div>
                    <span asp-validation-for="MaxSeats" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Price" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">€</span>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                        <span class="input-group-text">EUR</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Class" class="form-label"></label>
                    <select asp-for="Class" class="form-select" asp-items="Html.GetEnumSelectList<FlightClass>()"></select>
                    <span asp-validation-for="Class" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }
