@model IEnumerable<Wayward.Domain.DomainModels.Flight>

@{
    ViewData["Title"] = "Flights";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">Flights</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-uppercase small text-primary fw-semibold mb-1">
                                @Html.DisplayFor(m => item.AirlineName)
                            </div>
                            <h2 class="h5 mb-2">
                                @Html.DisplayFor(m => item.FlightDeparture)
                                <span class="text-secondary">→</span>
                                @Html.DisplayFor(m => item.FlightDestination)
                            </h2>
                        </div>
                        <span class="badge text-dark font-monospace border">@Html.DisplayFor(m => item.Class)</span>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <span class="badge text-dark font-monospace font-monospace border">
                            Dep: @Html.DisplayFor(m => item.DateDeparture)
                        </span>
                        <span class="badge text-body border">
                            Dur: @Html.DisplayFor(m => item.HourDuration)h @Html.DisplayFor(m => item.MinuteDuration)m
                        </span>
                        <span class="badge text-dark font-monospace border">
                            Seats: @Html.DisplayFor(m => item.MaxSeats)
                        </span>
                    </div>

                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                        <div class="fs-5 fw-semibold text-dark font-monospace">
                            @Html.DisplayFor(m => item.Price) EUR
                        </div>

                        <div class="btn-group">
                            <a asp-action="Book" asp-route-id="@item.Id" class="btn btn-primary">
                                Book
                            </a>
                            <form asp-action="AddToWishList" asp-route-id="@item.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-info">Add to WishList</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white">
                    <div class="d-flex flex-wrap gap-3 small">
                        <a asp-action="Details" asp-route-id="@item.Id" class="link-secondary link-underline-opacity-0 link-underline-opacity-75-hover">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="link-secondary link-underline-opacity-0 link-underline-opacity-75-hover">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="link-secondary link-underline-opacity-0 link-underline-opacity-75-hover">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
